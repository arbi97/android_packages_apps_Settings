<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
	android:key="interface_bars"
	android:title="@string/interface_bars_title" >
	<!-- Status bar -->
	<PreferenceCategory
		android:key="category_status_bar"
		android:title="@string/bars_and_menus_category_status_bar_title" >
		<CheckBoxPreference
			android:key="status_bar_brightness_control"
			android:persistent="false"
			android:summary="@string/status_bar_toggle_brightness_summary"
			android:title="@string/status_bar_toggle_brightness" />
		<PreferenceScreen
			android:fragment="com.android.settings.merk.DoubleTapToSleepSettings"
			android:key="double_tap_sleep"
			android:title="@string/double_tap_sleep_title"
			settings:includeXmlForSearch="@xml/double_tap_sleep_settings" />
		<CheckBoxPreference
			android:key="status_bar_notif_count"
			android:persistent="false"
			android:summary="@string/status_bar_notif_count_summary"
			android:title="@string/status_bar_notif_count_title" />
		<PreferenceScreen
			android:fragment="com.android.settings.merk.slim.StatusBarClockStyle"
			android:key="clock_style_pref"
			android:title="@string/status_bar_clock" />
		<PreferenceScreen
			android:fragment="com.android.settings.merk.interfacesettings.MenusSettings"
			android:key="menu_settings"
			android:title="@string/interface_menus_title" />
	</PreferenceCategory>
	<PreferenceCategory
		android:key="category_quick_settings"
		android:title="@string/quick_settings_category_title" >
		<CheckBoxPreference
			android:key="quicksettings_dynamic_row"
			android:persistent="false"
			android:summary="@string/qs_configurable_summary"
			android:title="@string/qs_configurable_title" />
	</PreferenceCategory>

	<!-- Network traffic meter -->
	<PreferenceCategory
		android:key="category_network_traffic"
		android:title="@string/network_traffic_title" >
		<CheckBoxPreference
			android:key="status_bar_network_activity"
			android:persistent="false"
			android:summary="@string/show_activity_indicators_on_status_bar_summary"
			android:title="@string/show_activity_indicators_on_status_bar_title" />
		<ListPreference
			android:entries="@array/show_network_traffic_state_entries"
			android:entryValues="@array/show_network_traffic_state_values"
			android:key="network_traffic_state"
			android:persistent="false"
			android:title="@string/show_network_traffic_state" />
		<ListPreference
			android:entries="@array/show_network_traffic_unit_entries"
			android:entryValues="@array/show_network_traffic_unit_values"
			android:key="network_traffic_unit"
			android:persistent="false"
			android:title="@string/show_network_traffic_unit" />
		<ListPreference
			android:entries="@array/show_network_traffic_frequency_entries"
			android:entryValues="@array/show_network_traffic_frequency_values"
			android:key="network_traffic_period"
			android:persistent="false"
			android:title="@string/show_network_traffic_frequency" />
	</PreferenceCategory>
	<!-- Navigation bar -->
	<PreferenceCategory
		android:key="category_navigation_bar"
		android:title="@string/bars_and_menus_category_navigation_bar_title" >
		<PreferenceScreen
			android:fragment="com.android.settings.merk.interfacesettings.NavBar"
			android:key="navigation_bar"
			android:summary="@string/navigation_bar_summary"
			android:title="@string/navigation_bar_title" />
		<PreferenceScreen
			android:fragment="com.android.settings.merk.interfacesettings.NavBarDimen"
			android:key="navigation_bar_dimen"
			android:summary="@string/navbar_dimen_summary"
			android:title="@string/navbar_dimen_title" />
		<PreferenceScreen
			android:fragment="com.android.settings.merk.interfacesettings.NavRing"
			android:key="navigation_ring"
			android:summary="@string/navigation_ring_summary"
			android:title="@string/navigation_ring_title" />
		<CheckBoxPreference
			android:key="soft_back_kill_app"
			android:persistent="false"
			android:summary="@string/soft_back_kill_app_summary"
			android:title="@string/soft_back_kill_app_title" />
                <ListPreference
                        android:key="kill_app_longpress_timeout"
                        android:defaultValue="1500"
                        android:title="@string/kill_app_longpress_timeout_title"
                        android:persistent="false"
                        android:entries="@array/kill_app_longpress_timeout_entries"
                        android:entryValues="@array/kill_app_longpress_timeout_values"
                        android:dependency="soft_back_kill_app" />
		<CheckBoxPreference
			android:key="emulate_menu_key"
			android:persistent="false"
			android:summary="@string/emulate_menu_key_summary"
			android:title="@string/emulate_menu_key_title" />
	</PreferenceCategory>
</PreferenceScreen>
